<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="@drawable/xin_voice_dialog_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/xin_voice_amplitude"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/voice_mic"
        android:src="@drawable/voice_mic_1"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <Chronometer
        android:id="@+id/xin_voice_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textColor="#cccccc"
        android:textSize="@dimen/font_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/xin_voice_cancel_slither_msg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@color/transparent"
        android:gravity="center_horizontal|bottom"
        android:text="@string/xin_voice_cancel_slither_msg"
        android:textColor="#cccccc"
        android:textSize="@dimen/font_12"
        android:visibility="visible" />

    <TextView
        android:id="@+id/xin_voice_cancel_loosen_msg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/xin_voice_dialog_bg"
        android:gravity="center_horizontal|bottom"
        android:text="@string/xin_voice_cancel_loosen_msg"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_12"
        android:visibility="gone" />

</RelativeLayout>