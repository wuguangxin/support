<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xin_dialog_bg"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:minHeight="40dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:text="提示"
            android:textColor="#191B25"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:text=""
                android:textColor="#191B25"
                android:textSize="15dp" />

        </RelativeLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll_content"
            android:background="@drawable/xin_common_dialog_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/v_divider"
            android:divider="@drawable/xin_common_dialog_divider"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xin_common_dialog_button"
                android:gravity="center"
                android:text="取消"
                android:textColor="#1B1B1B"
                android:textSize="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xin_common_dialog_button"
                android:gravity="center"
                android:text="确认"
                android:textColor="#EEBB22"
                android:textSize="16dp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</layout>
